<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_scb_api.CustomerDisplay" t-inherit="point_of_sale.CustomerDisplay" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_customer_display_sidebar')]" position="after">
            <t t-if="order.show_qr">
                <t t-esc="this.showQR()"/>
            </t>
            <t t-else="">
                <t t-esc="this.hidePopup()"/>
            </t>
        </xpath>
    </t>

</templates>